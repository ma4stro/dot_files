# alias tmux to make 256 colors work:
#alias tmux="TERM=xterm-256color tmux"

# launch tmux automatically
if command -v tmux &> /dev/null && [ -n "$PS1" ] && [[ ! "$TERM" =~ screen ]] && [[ ! "$TERM" =~ tmux ]] && [ -z "$TMUX" ] && [ ! -z "$TMUX_START" ]; then
  exec tmux
fi

